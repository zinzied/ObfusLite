# Include documentation
include README_OBFUSLITE.md
include GUI_FEATURES.md
include LICENSE

# Include requirements
include requirements.txt
include pyproject.toml

# Include examples
recursive-include examples *.py *.pyobf *.md

# Include ObfusLite package
recursive-include obfuslite *.py

# Exclude development files
exclude .gitignore
exclude .github
exclude setup_obfuslite.py
exclude test_*.py
recursive-exclude tests *
recursive-exclude .git *
recursive-exclude __pycache__ *
recursive-exclude *.pyc
recursive-exclude .pytest_cache *
recursive-exclude pyobfuscator *
